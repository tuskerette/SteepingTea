.container
  .row
    .col-md-12
      =form_for @song do |f|
        =f.label :url, 'Youtube URL*'
        =f.text_field :url
        %br
        =f.label :comment, 'Small Notes'
        =f.text_field :comment, maxlength: 40
        =f.hidden_field :user_id, value: current_user.id
        %br
        =f.submit class: 'btn btn-default'
  .row
    .col-md-12.required
      %p * URL Required! Please enter a youtube link like this:
      %p https://www.youtube.com/watch?v=jHIy1X2Y0CE

  .row
    .col-md-12.back-to-all-songs
      =link_to songs_path, class: 'btn btn-default' do
        %i.fa.fa-star
        Back to all songs

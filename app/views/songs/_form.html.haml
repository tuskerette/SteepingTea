.container
  .row
    .col-md-6
      =form_for @song do |f|
        =f.label :url, 'URL'
        =f.text_field :url
        %br
        =f.label :comment, 'Small Notes'
        =f.text_field :comment, maxlength: 40
        %br
        =f.submit class: 'btn btn-default'
  .row
    .col-md-12.back-to-all-songs
      =link_to songs_path, class: 'btn btn-default' do
        %i.fa.fa-star
        Back to all songs
